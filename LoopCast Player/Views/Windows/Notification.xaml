<Window x:Class="LoopCast_Player.Views.Windows.Notification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoopCast_Player.Views.Windows"
        mc:Ignorable="d"
        Title="Notification" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="{x:Null}" Height="50" Grid.Row="0">
            <TextBlock Name="Body" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <Button Grid.Row="1" Margin="10" VerticalAlignment="Bottom" Content="OK" Click="Close"></Button>
    </Grid>
</Window>
